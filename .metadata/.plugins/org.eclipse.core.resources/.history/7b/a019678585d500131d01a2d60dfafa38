package com.app.ivoke.helpers;

import android.content.Context;
import android.location.Location;
import android.location.LocationListener;
import android.location.LocationManager;
import android.os.Bundle;
import android.util.Log;

public class LocationHelper {
	
	private static final long MIN_DISTANCE_CHANGE_FOR_UPDATES = 50;
    private static final long MIN_TIME_BW_UPDATES = 1000 * 60 * 1; 
    
	
	public static Location getLocation(Context pContext, LocationListener pListener)
	{
		Location local = null;
		
		LocationManager locationManager = (LocationManager) pContext.getSystemService(pContext.LOCATION_SERVICE);
		
		 // getting GPS status
        boolean isGPSEnabled = locationManager.isProviderEnabled(LocationManager.GPS_PROVIDER);

        // getting network status
        boolean isNetworkEnabled = locationManager.isProviderEnabled(LocationManager.NETWORK_PROVIDER);
		
        if (isNetworkEnabled) {
            locationManager.requestLocationUpdates(
                    LocationManager.NETWORK_PROVIDER,
                    MIN_TIME_BW_UPDATES,
                    MIN_DISTANCE_CHANGE_FOR_UPDATES, this);
            Log.d("Network", "Network");
            if (locationManager != null) {
                location = locationManager.getLastKnownLocation(LocationManager.NETWORK_PROVIDER);
                if (location != null) {
                    //Constant.mLocation = location;
                    latitude = location.getLatitude();
                    longitude = location.getLongitude();
                }
            }
        }
        
		return local;
	}
	
	public class LocationProvider implements LocationListener
	{
		Location currentLocation;
		Location oldLocation;
		boolean  isChanged;
		boolean  isEnabled;
		
		@Override
		public void onLocationChanged(Location location) {
			oldLocation     = new Location(currentLocation);
			currentLocation = location;
		}

		@Override
		public void onStatusChanged(String provider, int status, Bundle extras) {
		}

		@Override
		public void onProviderEnabled(String provider) {
			isEnabled = true;
		}

		@Override
		public void onProviderDisabled(String provider) {
			isEnabled = false;
		}
		
		public boolean isChangedLocation()
		{
			return oldLocation != currentLocation;
		}
		
		public Location getCurrentLocation()
		{
			return currentLocation;
		}
		
		public Location getOldLocation()
		{
			return oldLocation;
		}
		
	}
}
