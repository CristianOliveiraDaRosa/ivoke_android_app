package com.app.ivoke.helpers;

import com.app.ivoke.R;

import android.app.Activity;
import android.content.SharedPreferences;
import android.preference.PreferenceManager;

public class SettingsHelper {
	
	public static int getMuralPostDistance(Activity pAct)
	{
		SharedPreferences pref = PreferenceManager.getDefaultSharedPreferences(pAct);
		return pref.getInt(pAct.getString(R.string.pkey_mural_post_distance), 10);
	}
	
	public static boolean askForChecking(Activity pAct)
	{
		SharedPreferences pref = PreferenceManager.getDefaultSharedPreferences(pAct);
		return pref.getBoolean(pAct.getString(R.string.pkey_mural_post_distance), false);
	}
}
