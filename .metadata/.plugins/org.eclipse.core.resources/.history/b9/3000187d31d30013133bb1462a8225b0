package com.app.ivoke.models;

import android.database.sqlite.SQLiteDatabase;

public class ConfiguracaoModel extends Database {
	
	private static final String TB_NAME = "user_configuracao";
	
	private static final string ID = "id";
	
	private static final String TB_CREATE = 
			 "CREATE TABLE "+TB_NAME+
			 "( " +
			 " id             integer primary key autoincrement, " +
			 " posts_distance integer," +
			 " block_advert   integer " +
			 ");";	
	
	@Override
	public void onCreate(SQLiteDatabase db) {
		db.execSQL(TB_CREATE);
	}

	@Override
	public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
		db.execSQL("DROP TABLE IF EXISTS " + TB_NAME);
	    onCreate(db);
	}

}
