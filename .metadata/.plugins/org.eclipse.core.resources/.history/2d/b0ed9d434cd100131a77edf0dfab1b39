package com.app.ivoke.controllers.login;

import com.app.ivoke.R;
import com.app.ivoke.helpers.DebugHelper;
import com.app.ivoke.models.FacebookModel;
import com.facebook.Session;
import com.facebook.SessionState;
import com.facebook.Session.StatusCallback;

import android.content.Intent;
import android.os.Bundle;

public class FacebookLoginActivity extends android.support.v4.app.FragmentActivity {
	
	public static String PE_FACEBOOK_SESSION = "FacebookSession";
		
	FacebookModel faceModel = new FacebookModel();
	DebugHelper   debug =  new DebugHelper("FacebookLoginActivity");
 	
	FacebookLoginCallBack callBack = new FacebookLoginCallBack();
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		debug.method("onCreate");
		
		super.onCreate(savedInstanceState);
		setContentView(R.layout.facebook_login_activity);
		
		faceModel.openSessionAsync(this, callBack);
	}
	
	@Override
	protected void onActivityResult(int arg0, int arg1, Intent arg2) {
        debug.method("onActivityResult").par("arg0",arg0)
								        .par("arg1",arg1)
								        .par("arg2",arg2);
        
		super.onActivityResult(arg0, arg1, arg2);
		
		//if is first time loggin facebook 
		
	}
	
	private void onSessionStateChange(Session session, SessionState state, Exception exception) {
	    debug.method("onSessionStateChange").par("session",session).par("state",state);
		
	     if (state.isOpened()) {
	        debug.method("onSessionStateChange").log("Session Logged");
			
	    } else if (state.isClosed()) {
	    	debug.method("onSessionStateChange").log("Logged out...");
	    }
	}
	
	public class FacebookLoginCallBack implements StatusCallback
	{
		@Override
		public void call(Session session, SessionState state, Exception exception) 
		{
			debug.method("FacebookLoginCallBack.call");
			onSessionStateChange(session, state, exception);
		}
	}
}
