package com.app.ivoke.objects;

import java.util.ArrayList;

import com.app.ivoke.helpers.WebHelper;
import com.app.ivoke.helpers.WebHelper.WebParameter;

import android.graphics.Bitmap;

public class MuralPost{
	
	int muralPostId;
    Bitmap profileImg;
    String userName;
	String message;
	String when;
    
    public MuralPost(int pMuralPostId, String pUserName,String pMessage, String pWhen, Bitmap pProfileImage)
    {
    	muralPostId = pMuralPostId;
        userName  = pUserName;
    	message   = pMessage;
    	when      = pWhen;
    	profileImg  = pProfileImage;
    }
    
    public int getId()
    {
    	return muralPostId;
    }
    
    public String getNome()
    {
    	return userName;
    }
    
    public String getMensagem()
    {
    	return message;
    }
    
    public String getQuando()
    {
    	return when;
    }
    
    public Bitmap getProfileImage()
    {
    	return profileImg;
    }
    
    public ArrayList<WebParameter> toWebParameter()
    {
    	ArrayList<WebParameter> parameter = new ArrayList<WebParameter>();
    	WebParameter w  = new WebParameter("aa", getId());
    	parameter.add(new WebParameter("aa", getId()));
    	
    	return parameter;
    }
    
}

