<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@id/welcome_settings_lbl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/welcome_settings_lbl_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="50dp"
        android:textColor="@color/def_ivoke_blue" />

     <TextView
         android:id="@id/welcome_settings_lbl_description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:text="@string/welcome_settings_lbl_description"
         android:layout_margin="20dp"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <Button
         android:id="@+id/welcome_settings_btn_settings"
         style="@style/DefaultTheme.ButtonStyle"
         android:layout_width="183dp"
         android:layout_margin="20dp"
         android:drawableRight="@drawable/ic_actbar_settings"
         android:text="@string/welcome_settings_btn_settings" />

     <Button
         android:id="@id/welcome_settings_btn_next"
         style="@style/DefaultTheme.ButtonStyle"
         android:layout_width="174dp"
         android:layout_margin="20dp"
         android:drawableRight="@drawable/abc_ic_go"
         android:text="@string/welcome_btn_end" />
    
</LinearLayout>
