<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <com.app.ivoke.objects.extended_android.PullDownListView
            android:id="@id/main_mural_posts_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            android:descendantFocusability="beforeDescendants"
             >

		</com.app.ivoke.objects.extended_android.PullDownListView>
		
        <LinearLayout
            android:id="@id/main_mural_create_post_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <Button
            style="@style/DefaultTheme.ButtonStyleSecondColor"
            android:id="@id/main_mural_create_post_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_new_event"
            android:text="@string/main_mural_btn_create_post" />
    </LinearLayout>
</LinearLayout>

