<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@id/welcome_localization_lbl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/welcome_localization_lbl_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="50dp"
        android:textColor="@color/def_ivoke_blue" />

     <TextView
         android:id="@id/welcome_localization_lbl_description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_margin="20dp"
         android:text="@string/welcome_localization_lbl_description"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <Button
         style="@style/DefaultTheme.ButtonStyle"
         android:id="@id/welcome_localization_btn_network"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         android:drawableRight="@drawable/ic_action_next_item"
         android:text="@string/welcome_localization_btn_network" />

     <Button
         style="@style/DefaultTheme.ButtonStyle"
         android:id="@id/welcome_localization_btn_gps"
         android:layout_width="110dp"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         android:drawableRight="@drawable/ic_action_next_item"
         android:text="@string/welcome_localization_btn_gps" />

     <Button
         style="@style/DefaultTheme.ButtonStyle"
         android:id="@id/welcome_localization_btn_next"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:layout_margin="20dp"
         android:drawableRight="@drawable/ic_action_next_item"
         android:text="@string/welcome_btn_next" />
    
</LinearLayout>
