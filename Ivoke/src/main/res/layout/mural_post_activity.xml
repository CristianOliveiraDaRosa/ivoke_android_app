<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
            android:id="@id/main_mural_create_post_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/main_mural_txt_create_post_hint"
            android:lines="50"
            android:inputType="textMultiLine"
            android:layout_gravity="top"
            android:gravity="top" >

            <requestFocus />
        </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/facebook_lbl_info_mural_facebook"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
            android:id="@id/main_mural_is_anonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:checked="false"
            android:text="@string/main_mural_chx_lbl_create_anonymous"
            android:textSize="12sp" />

    <Button
        style="@style/DefaultTheme.ButtonStyleSecondColor"
        android:id="@id/main_mural_create_post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_action_new_event"
        android:text="@string/main_mural_btn_public" />

</LinearLayout>
