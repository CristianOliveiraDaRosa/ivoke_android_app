<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#2299f4" />

            <stroke android:width="1dp" android:color="#2299f4" />

            <corners android:radius="6dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#dfe3ee" android:startColor="#f2f1f0" />

            <stroke android:width="1dp" android:color="#17c6ff" />

            <corners android:radius="6dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            
            <size android:height="50dp"></size>
        </shape>
    </item>

</selector>